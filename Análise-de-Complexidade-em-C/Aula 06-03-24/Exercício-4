#include <stdio.h>
#include <stdlib.h>

int main()
{
    //Indexando Matrix e Scaneando os Elementos
    int matrix[3][3];
    for (int i=0; i<3; i++) {
        for (int j=0; j<3; j++) {
            printf("Elemento Posição [%d][%d]", i, j);
            scanf("%d", &matrix[i][j]);
        }
    }
    
    //Indexando a Matrix e Imprimindo Conteúdos
    for (int i=0; i<3; i++) {
        for (int j=0; j<3; j++) {
            printf("| %d |", matrix[i][j]);
        }
    }

    return 0;
}
